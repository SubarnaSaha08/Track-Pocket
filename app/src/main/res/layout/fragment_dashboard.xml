    <TextView
        android:id="@+id/home_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/grey"
        android:text="Recent Transactions"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_account"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/transaction_view_all_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="View All"
        android:textColor="@color/grey"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_account"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/home_transaction_title"
        app:layout_constraintTop_toBottomOf="@id/home_transaction_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_id_transaction"
